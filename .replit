modules = ["java", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ChessClubFrontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ReferenceServer"

[[workflows.workflow]]
name = "ChessClubFrontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "ReferenceServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/simple-server.js"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "./gradlew :app:installDebug && adb shell am start -n com.chessclub.app/.ui.login.LoginActivity"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
